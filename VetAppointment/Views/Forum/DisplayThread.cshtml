@model ForumModel
@{
    ViewData["Title"] = "Pytanie";
}

<h1>Pytanie</h1>
<div class="card mb-3 border border-primary">
    <div class="card-header">
        <h5 class="card-title"> @Html.DisplayFor(model => model.Entry.EntryBody)</h5>
        <div class="card-text">@Html.DisplayFor(model => model.Entry.Author.Name) @Html.DisplayFor(model => model.Entry.Author.Surname) [@Html.DisplayFor(model => model.Entry.Author.UserName)]</div>
        <div class="card-text">@Html.DisplayFor(model => model.Entry.CreatedDate) </div>
        <div>
            @*<a asp-action="Reply" class="btn btn-info" asp-route-id="@entry.EntryID">Odpowiedz</a>*@
            @*<a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.MessageID">Skasuj</a>*@
        </div>
    </div>
</div>
<h2>Odpowiedzi</h2>
@foreach (var entry in Model.Entries)
{
    <div class="card mb-3">
        <div class="card-header">
            <h5 class="card-title">@entry.EntryBody</h5>
            <div class="card-text">@entry.Author.Name @entry.Author.Surname [@entry.Author]</div>
            <div class="card-text">@entry.CreatedDate</div>
            <div>
            </div>
        </div>
    </div>
}
<div class="form-group">
    <a class="btn btn-info" asp-action="Forum">Powrót</a>
</div>
