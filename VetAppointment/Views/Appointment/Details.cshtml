@model VetAppointment.Models.Appointment

@{
    ViewData["Title"] = "Szczegóły wizyty";
}

<h1>Szczegóły wizyty</h1>

<div>
    @*<h4>Appointment</h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            Lekarz
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vet.Name) @Html.DisplayFor(model => model.Vet.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            <textarea asp-for="Description" class="form-control" rows="10" cols="20" text-wrap:normal" type="text" readonly="readonly"></textarea>
            @*@Html.DisplayFor(model => model.Description)*@
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Details">
        <input type="radio" id="r1" name="rating" value="1" checked />
        <label for="r1">1</label>
        <input type="radio" id="r1" name="rating" value="2" checked />
        <label for="r2">2</label>
        <input type="radio" id="r1" name="rating" value="3" checked />
        <label for="r3">3</label>
        <input type="radio" id="r1" name="rating" value="4" checked />
        <label for="r4">4</label>
        <input type="radio" id="r1" name="rating" value="5" checked />
        <label for="r5">5</label>

        <input type="submit" value="Oceń wizytę"/>
    </form>
    <a asp-action="UserPastAppointmentList">Powrót</a>
</div>
