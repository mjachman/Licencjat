@model IEnumerable<VetAppointment.Models.Message>

@{
    ViewData["Title"] = "SentIndex";
}

<h1>Skrzynka nadawcza</h1>

<p>
    <a asp-action="Create">[Wyślij wiadomość]</a>
    <br/>
    <a asp-action="Index">[Odebrane wiadomości]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th>
                Do:
            </th>
            <th>
                Wysłano:
            </th>
            <th>
                Wyświetlono:
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Receiver.Name) @Html.DisplayFor(modelItem => item.Receiver.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @if (item.isViewed)
                {
                    @Html.DisplayFor(modelItem => item.ViewedDate)
                }
                else
                {
                    <div>---</div>
                }


            </td>
            <td>
                <a asp-action="SentDisplay" class="btn btn-info" asp-route-id="@item.MessageID">Pokaż</a>
                @*<a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.MessageID">Skasuj</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
